<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_classes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="genegrin.basicui.AddClasses">

    <TextView
        android:text="Add Classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classNameAdder"
        android:dropDownWidth="match_parent"
        android:layout_marginTop="29dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classNameAdder2"
        android:dropDownWidth="match_parent"
        android:layout_marginTop="19dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@+id/classNameAdder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classNameAdder3"
        android:dropDownWidth="match_parent"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_marginTop="22dp"
        android:inputType="textCapCharacters"
        android:layout_below="@+id/classNameAdder2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classNameAdder4"
        android:dropDownWidth="match_parent"
        android:layout_marginTop="21dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@+id/classNameAdder3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classNameAdder5"
        android:dropDownWidth="match_parent"
        android:layout_marginTop="20dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@+id/classNameAdder4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classNameAdder6"
        android:dropDownWidth="match_parent"
        android:layout_marginBottom="66dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/doneButton" />
</RelativeLayout>
